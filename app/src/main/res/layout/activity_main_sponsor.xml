<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dustin.cs495helloworld.Main_sponsor">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background_blue">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Create Challenges Portal"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@color/btn_blue"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />



        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />


        <Button
            android:id="@+id/sbtnCreateChal"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Create Challenge"
            android:onClick="sbtnCreate"
            android:background="@color/btn_blue"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/sbtnViewChal"
            android:layout_alignStart="@+id/sbtnViewChal" />

        <Button
            android:id="@+id/sbtnViewChal"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="View Challenges"
            android:onClick="sbtnView"
            android:layout_marginTop="25dp"
            android:background="@color/btn_blue"
            android:layout_below="@+id/sbtnCreateChal"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/sbtnEditChal"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Edit Challenge"
            android:layout_marginTop="25dp"
            android:onClick="sbtnEdit"
            android:layout_below="@+id/sbtnViewChal"
            android:background="@color/btn_blue"
            android:layout_centerHorizontal="true" />
        <Button
            android:id="@+id/sbtnDelChal"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:onClick="sbtnDel"
            android:text="Delete Challenge"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/sbtnEditChal"
            android:background="@color/btn_blue"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background_blue"
            app:srcCompat="@drawable/settings_gear"
            android:layout_below="@+id/textView6"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
