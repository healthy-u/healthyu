<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dustin.cs495helloworld.Main_sponsor">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background_blue"
        tools:layout_editor_absoluteX="0dp">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/btn_blue"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:text="Create Challenges Portal"
            android:textSize="30dp" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/sponsor" />


        <Button
            android:id="@+id/sbtnCreateChal"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/sbtnViewChal"
            android:layout_alignStart="@+id/sbtnViewChal"
            android:layout_centerVertical="true"
            android:background="@drawable/shadow"
            android:onClick="sbtnCreate"
            android:text="Create Challenge" />

        <Button
            android:id="@+id/sbtnViewChal"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/sbtnCreateChal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/shadow"
            android:onClick="sbtnView"
            android:text="View Challenges" />

        <Button
            android:id="@+id/sbtnEditChal"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/sbtnViewChal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/shadow"
            android:onClick="sbtnEdit"
            android:text="Edit Challenge" />

        <Button
            android:id="@+id/sbtnDelChal"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/sbtnEditChal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/shadow"
            android:onClick="sbtnDel"
            android:text="Delete Challenge" />

        <ImageButton
            android:id="@+id/sbtnSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView6"
            android:background="@color/background_blue"
            android:onClick="sbtnSet"
            app:srcCompat="@drawable/settings_gear" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
