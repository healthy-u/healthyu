<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue">

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tab_blue"
        app:tabIndicatorColor="@color/tabIndicator_blue"
        app:tabSelectedTextColor="@color/tabIndicator_blue"
        app:tabTextColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <android.support.design.widget.TabItem
            android:id="@+id/tabPersonal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_name_personal" />

        <android.support.design.widget.TabItem
            android:id="@+id/tabFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_name_friends" />

        <android.support.design.widget.TabItem
            android:id="@+id/tabTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_name_team" />

        <android.support.design.widget.TabItem
            android:id="@+id/tabCampus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_name_campus" />
    </android.support.design.widget.TabLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnStatsPage"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@color/tab_blue"
            android:elevation="0dp"
            android:text="@string/stats"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnRunPage"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:background="@color/btn_green"
            android:text="@string/run"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnChallengePage"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@color/tab_blue"
            android:elevation="0dp"
            android:text="@string/challenges"
            android:textColor="@android:color/white" />

    </LinearLayout>
</RelativeLayout>